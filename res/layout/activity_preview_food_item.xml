<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/foodItemAdd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Add" />

    <Button
        android:id="@+id/foodItemCancel"
        style="100dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Cancel" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodItemAdd"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/energyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/energy"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Kcal"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carbsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/energyLayout"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myPlan"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Carbs"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/carbs"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Carbs"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/dailyCalorieBudget"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="grams"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carbsLayout"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/age"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Fat"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/height"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="grams"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sugarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fatLayout"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Note"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/sugar"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Sugar"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="grams"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proteinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sugarLayout"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/planGoalTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/protein"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Protein"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/planCalorieBudgetTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="grams"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/increase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/name"
        android:src="@drawable/ic_action_collapse" />

    <LinearLayout
        android:id="@+id/mesureWeightLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_below="@+id/increase" 
        >

        <TextView
            android:id="@+id/measure"
            android:layout_height="wrap_content"
            android:text="mesure"
            android:layout_width="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView12"
            android:layout_height="wrap_content"
            android:text="cup"
            android:layout_width="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/weight"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:layout_width="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView11"
            android:layout_height="wrap_content"
            android:text="grams"
            android:layout_width="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/decrease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mesureWeightLayout"
        android:src="@drawable/ic_action_expand" />

</RelativeLayout>